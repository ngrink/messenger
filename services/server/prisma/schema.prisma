generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String?   @unique
  email        String    @unique
  password     String
  online       Boolean   @default(false)
  lastOnlineAt DateTime? @map("last_online_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  profile      Profile?
  chats        Member[]
  messages     Message[]

  @@map("users")
}

model Profile {
  userId    Int       @id @map("user_id")
  name      String
  avatar    String?
  biography String?
  birthdate DateTime?
  updatedAt DateTime  @updatedAt @map("updated_at")
  user      User      @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model Chat {
  id             Int             @id @default(autoincrement())
  type           ChatType
  public         Boolean         @default(false)
  createdAt      DateTime        @default(now()) @map("created_at")
  name           String?
  description    String?
  avatar         String?
  link           String?
  members        Member[]
  messages       Message[]
  unreadMessages UnreadMessage[]

  @@map("chats")
}

model Member {
  chatId    Int
  userId    Int
  role      MemberRole
  createdAt DateTime   @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])
  chat Chat @relation(fields: [chatId], references: [id])

  @@id([chatId, userId])
  @@map("members")
}

model Message {
  id          Int          @id @default(autoincrement())
  chatId      Int
  userId      Int
  text        String
  createdAt   DateTime     @default(now()) @map("created_at")
  chat        Chat         @relation(fields: [chatId], references: [id])
  author      User         @relation(fields: [userId], references: [id])
  attachments Attachment[]

  @@map("messages")
}

model UnreadMessage {
  chatId    Int
  userId    Int
  messageId Int

  chat Chat @relation(fields: [chatId], references: [id])

  @@id([userId, chatId, messageId])
  @@map("unread_messages")
}

model Attachment {
  id        Int            @id @default(autoincrement())
  messageId Int
  type      AttachmentType
  content   String
  message   Message        @relation(fields: [messageId], references: [id])

  @@map("attachments")
}

enum ChatType {
  PERSONAL
  GROUP
  CHANNEL
}

enum MemberRole {
  OWNER
  ADMIN
  USER
}

enum AttachmentType {
  PHOTO
  VIDEO
  AUDIO
  DOCUMENT
  PRESENTATION
  SPREADSHEET
  ARCHIVE
  FILE
}
